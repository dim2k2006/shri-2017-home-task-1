mixin modal
    +b('section').modal
        +e('div').wrapper
            +e('div').content
                +e('div').preview
                    +e('img')(src="")

                +e('div').info
                    +e('div').title!= ""

                    +e('div').description
                        +e('p')!= ""

                    +e('div').close(title="close")
                        +e('img')(src="/images/ico-close.svg")
